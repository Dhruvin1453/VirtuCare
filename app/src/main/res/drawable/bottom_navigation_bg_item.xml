<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/maincolor"/> <!-- background when selected -->
            <corners android:radius="16dp"/> <!-- rounded corners if you want -->
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- no background -->
        </shape>
    </item>
</selector>
